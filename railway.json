{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd akukoNkeNdu && mvn clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd akukoNkeNdu && java -jar target/akukoNkeNdu-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/api/quotes",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
} 